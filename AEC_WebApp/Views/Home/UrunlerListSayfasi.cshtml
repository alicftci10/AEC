                    {
                        foreach (var item in Model.MouseList)
                        {
                            <div class="col-md-3 col-xs-6">
                                <div class="product">
                                    <a href="/Home/MouseDetay?pMouseId=@item.Id">
                                        <div class="product-img">
                                            <img src="https://localhost:7044/images/@item.ResimUrl" alt="" height="180">
                                            <div class="product-label">
                                                <span class="sale">-5%</span>
                                                <span class="new">NEW</span>
                                            </div>
                                        </div>
                                        <div class="product-body">
                                            <h3 class="product-name"><span style="color:#696cff">@item.MouseAdi</span></h3>
                                            <h4 class="product-price">@Formatting.FormatTurkLirasi(item.Fiyat.Value) <del class="product-old-price">@Formatting.FormatIndirimsizFiyat(item.Fiyat.Value, 5)</del></h4>
                                            <div class="product-rating">
                                                <i class="fa fa-star"></i>
                                                <i class="fa fa-star"></i>
                                                <i class="fa fa-star"></i>
                                                <i class="fa fa-star"></i>
                                                <i class="fa fa-star"></i>
                                            </div>
                                            <div class="product-btns">
                                                @if (ViewData["KullaniciId"] != null)
                                                {
                                                    <button class="add-to-wishlist" onclick="FavoriMouseDurum(@item.Id)">
                                                        <i class="bi bi-heart-fill" style="color:#329d00e6;"></i><span class="tooltipp">FAVORİLERE EKLE</span>
                                                    </button>
                                                }
                                                else
                                                {
                                                    <button class="add-to-wishlist" onclick="window.location.href='/Authentication/LoginEkrani?p=hata'">
                                                        <i class="bi bi-heart-fill" style="color:#329d00e6;"></i><span class="tooltipp">FAVORİLERE EKLE</span>
