<!-- BREADCRUMB -->
<div id="breadcrumb" class="section">
    <!-- container -->
    <div class="container">
        <!-- row -->
        <div class="row">
            <div class="col-md-12">
                <ul class="breadcrumb-tree">
                    <li style="text-transform:none;font-size:20px;">@Model.KategoriIdName</li>
                </ul>
            </div>
        </div>
        <!-- /row -->
    </div>
    <!-- /container -->
</div>
<!-- /BREADCRUMB -->
<!-- SECTION -->
<div class="section">
    <!-- ASIDE -->
    <div id="aside" class="col-md-2" style="margin-left:20px;">
        <!-- aside Widget -->
        <div class="aside">
            <h3 class="aside-title">ÜRÜNLER</h3>
            <div class="checkbox-filter">
                @foreach (var item in mainKategoriList)
                {
                    <div class="input-checkbox">
                        <div style="margin-left:10px;">
                            <i class="bi bi-arrow-right-short"></i>
                            <a href="/Home/UrunlerListSayfasi?pId=@item.Id">@item.KategoriAdi</a>
                            @if (item.Id == 1)
                            {
                                <small>(@ViewData["AllLaptop"])</small>
                            }
                            else if (item.Id == 2)
                            {
                                <small>(@ViewData["AllMonitor"])</small>
                            }
                            else if (item.Id == 30)
                            {
                                <small>(@ViewData["AllMouse"])</small>
                            }
                        </div>
                    </div>
                }
            </div>
        </div>
        <!-- /aside Widget -->
        <!-- aside Widget -->
        <br />
        <form id="price-form" method="GET" action="/Home/UrunlerListSayfasi">
            <div class="aside">
                <h3 class="aside-title">FİYAT</h3>
                <div class="price-filter">
                    <div id="price-slider"></div>
                    <div class="input-number price-min">
                        <input id="price-min" name="min" type="number" readonly>
                    </div>
                    <span>-</span>
                    <div class="input-number price-max">
                        <input id="price-max" name="max" type="number" readonly>
                    </div>
                </div>
            </div>
        </form>
        <!-- /aside Widget -->
        <!-- aside Widget -->
        @foreach (var item in mainKategoriList)
        {
            List<KategoriDataModel> KategoriList1 = kategoriList.Where(i => i.MainKategoriId == item.Id).ToList();

            @foreach (var item2 in KategoriList1)
            {
                List<KategoriDataModel> KategoriList2 = kategoriList.Where(i => i.MainKategoriId == item2.Id).ToList();

                <div class="aside">
                    <h3 class="aside-title" style="text-transform:none;">@item2.KategoriAdi</h3>

                    @foreach (var item3 in KategoriList2)
