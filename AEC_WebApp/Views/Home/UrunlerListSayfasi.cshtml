                        <div class="checkbox-filter">
                            <div class="input-checkbox">
                                <div style="margin-left:10px;">
                                    <i class="bi bi-arrow-right-short"></i>
                                    @if (item.Id == 1)
                                    {
                                        <a href="/Home/UrunlerListSayfasi?pId=@item3.Id">@item3.KategoriAdi Laptoplar</a>
                                        <small>(@item3.Count)</small>
                                    }
                                    else
                                    {
                                        <a href="/Home/UrunlerListSayfasi?pId=@item3.Id">@item3.KategoriAdi Monitörler</a>
                                        <small>(@item3.Count)</small>
                                    }
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
        }
        <!-- /aside Widget -->
    </div>
