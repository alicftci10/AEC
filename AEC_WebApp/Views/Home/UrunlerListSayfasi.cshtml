@section AECScript {
    <script type="text/javascript">

        document.querySelectorAll('.product-btns button, .add-to-cart button').forEach(button => {
            button.addEventListener('click', function (event) {
                event.preventDefault(); // Buton tıklanınca linkin varsayılan davranışını engelle
                event.stopPropagation(); // Olayın yukarı doğru yayılmasını engelle
            });
        });

        document.addEventListener('DOMContentLoaded', function () {
            var messageBox = '@TempData["MessageBox"]';
            if (messageBox == 4) {
                MessageBox("success", "Ürün Favorilere Eklendi");
            }
            else if (messageBox == 5) {
                MessageBox("success", "Ürün Favorilerden Çıkarıldı");
            }
            else if (messageBox == 6) {

                MessageBox("success", "Ürün Sepete Eklendi");
            }
            else if (messageBox == 7) {
                MessageBox("success", "Ürün Sepetten Çıkarıldı");
            }

        });

        function SepetLaptopDurum(Id) {
            $.ajax({
                url: '/Home/SepetDurum',
                type: 'GET',
                data: { pLaptopId: Id },
                success: function (response) {
                    window.location.reload();
                },
                error: function (xhr, status, error) {
                    MessageBox("error", "Ürün sepete eklenirken bir hata oluştu!!");
                }
            });
        }

        function FavoriLaptopDurum(Id) {
            $.ajax({
                url: '/Home/FavoriDurum',
                type: 'GET',
                data: { pLaptopId: Id },
                success: function (response) {
                    window.location.reload();
                },
                error: function (xhr, status, error) {
                    MessageBox("error", "Ürün favorilere eklenirken bir hata oluştu!!");
                }
            });
        }

        function SepetMonitorDurum(Id) {
            $.ajax({
                url: '/Home/SepetDurum',
                type: 'GET',
                data: { pMonitorId: Id },
                success: function (response) {
                    window.location.reload();
                },
                error: function (xhr, status, error) {
                    MessageBox("error", "Ürün sepete eklenirken bir hata oluştu!!");
                }
            });
        }

        function FavoriMonitorDurum(Id) {
            $.ajax({
                url: '/Home/FavoriDurum',
                type: 'GET',
                data: { pMonitorId: Id },
                success: function (response) {
                    window.location.reload();
                },
                error: function (xhr, status, error) {
                    MessageBox("error", "Ürün favorilere eklenirken bir hata oluştu!!");
                }
            });
        }

        function SepetMouseDurum(Id) {
            $.ajax({
                url: '/Home/SepetDurum',
                type: 'GET',
                data: { pMouseId: Id },
                success: function (response) {
                    window.location.reload();
                },
                error: function (xhr, status, error) {
                    MessageBox("error", "Ürün sepete eklenirken bir hata oluştu!!");
                }
            });
        }

        function FavoriMouseDurum(Id) {
            $.ajax({
                url: '/Home/FavoriDurum',
                type: 'GET',
                data: { pMouseId: Id },
                success: function (response) {
                    window.location.reload();
                },
                error: function (xhr, status, error) {
                    MessageBox("error", "Ürün favorilere eklenirken bir hata oluştu!!");
                }
            });
        }

        let sliderInitialized = false;

        function initializeSlider() {
            const slider = document.getElementById('price-slider');

            if (slider.noUiSlider) {
                slider.noUiSlider.destroy();
            }

            noUiSlider.create(slider, {
                start: [0, 200000],
                connect: true,
                range: {
                    'min': 0,
                    'max': 200000
                }
            });

            slider.noUiSlider.on('update', function (values) {
                document.getElementById('price-min').value = Math.round(values[0]);
                document.getElementById('price-max').value = Math.round(values[1]);
            });

            slider.noUiSlider.on('change', function () {
                document.getElementById('price-form').submit();
            });

            sliderInitialized = true;
        }

        document.addEventListener('DOMContentLoaded', initializeSlider);

    </script>
}