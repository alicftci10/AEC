@model List<KategoriDataModel>

@{
    int siralama = 1;
}

<div class="table-responsive text-nowrap bg-dark" style="height:73vh;">
    <table class="table table-dark">
        <thead>
            <tr>
                <th></th>
                <th>ÜST KATEGORİ</th>
                <th>ORTA KATEGORİ</th>
                <th>ALT KATEGORİ</th>
                <th>EKLEYEN</th>
                <th>GÜNCELLEME TARİHİ</th>
                <th></th>
            </tr>
        </thead>
        <tbody class="table-border-bottom-0">

            @foreach (var item in Model)
            {
                <tr>
                    <td class="text-center">
                        @siralama
                    </td>
                    <td>@item.UstKategori</td>
                    <td>@item.OrtaKategori</td>
                    <td>@item.AltKategori</td>
                    <td>@item.CreatedByName</td>
                    <td>@item.CreatedAt</td>
                    <td>
                        @if (ViewData["KullaniciTuru"] == "Admin")
                        {
                            if (item.AltKategori != null)
                            {
                                <div class="dropdown">
                                    <div type="button" class="btn p-0 dropdown-toggle hide-arrow text-secondary" data-bs-toggle="dropdown">
                                        <i class="bx bx-dots-vertical-rounded"></i>
                                    </div>
                                    <div class="dropdown-menu" style="background-color:black">
                                        <a class="dropdown-item text-warning" href="/Kategori/KategoriSayfasi?pId=@item.Id"><i class="bx bx-edit-alt me-1"></i> Düzenle</a>
                                        <button type="button" class="dropdown-item text-danger"
                                                data-bs-toggle="modal"
                                                data-bs-target="#backDropModal"
                                                onclick="deleteModal(@item.Id)">
                                            <i class="bx bx-trash me-1"></i> Sil
                                        </button>
                                    </div>
                                </div>
                            }
                        }
                    </td>
                </tr>

                siralama++;
            }

        </tbody>
    </table>
</div>