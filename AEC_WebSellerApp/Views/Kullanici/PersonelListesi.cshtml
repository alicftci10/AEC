                                        @siralama
                                    </td>
                                    <td>@item.Ad @item.Soyad</td>
                                    <td>@item.Email</td>
                                    <td>@item.Telefon</td>
                                    <td>@item.CreatedByName</td>
                                    <td>@item.CreatedAt</td>
                                    <td>
                                        @if (item.KullaniciTuruId == 1)
                                        {
                                            <span class="text-success">Admin</span>
                                        }
                                        else
                                        {
                                            <span class="text-danger">Personel</span>
                                        }
                                    </td>
                                    <td>
                                        <div class="dropdown">
