    <div class="content-wrapper">

        <div class="container-xxl flex-grow-1 container-p-y">
            <div class="card">
                <div class="card-header" style="background-color:#329D00;">
                    <div class="d-flex justify-content-between align-items-center">
                        <h4 class="text-center fw-bold mb-0 flex-grow-1" style="color:black;">
                            İptal Sipariş Listesi
                        </h4>
                    </div>
                </div>
                <div id="list">
                    <div class="table-responsive bg-dark" style="height:73vh;">
                        <table class="table table-dark">
                            <thead>
                                <tr class="text-nowrap">
                                    <th class="text-center">SİPARİŞ NO</th>
                                    <th></th>
                                    <th>ÜRÜN ADI</th>
                                    <th>ADET</th>
                                    <th>FİYATI</th>
                                    <th>MÜŞTERİ</th>
                                    <th>SİPARİŞ TARİHİ</th>
                                    <th>PERSONEL</th>
                                    <th>İPTAL TARİHİ</th>
                                </tr>
                            </thead>
                            <tbody class="table-border-bottom-0">

                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td class="text-center">
                                            @item.Id
                                        </td>
                                        <td>
                                            @if (item.ResimUrl != null)
                                            {
                                                <img src="~/images/@item.ResimUrl?x=1" width="120" />
                                            }
                                        </td>
                                        <td>@item.UrunAdi</td>
                                        <td>X @item.Adet</td>
                                        <td>
                                            @if (item.Fiyat.HasValue)
                                            {
                                                @Formatting.FormatTurkLirasi(item.Fiyat.Value)
                                            }
                                        </td>
                                        <td class="text-nowrap">@item.CreatedByName</td>
                                        <td class="text-nowrap">@item.CreatedAt</td>
                                        <td class="text-nowrap">@item.UpdatedByName</td>
                                        <td class="text-nowrap">@item.UpdatedAt</td>
                                    </tr>
                                }

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <footer style="background-color:black!important;">
            <div class="container-xxl d-flex flex-wrap justify-content-between py-2 flex-md-row">
                <div class="mb-2 mb-md-2">
                    ©
                    <script>
                        document.write(new Date().getFullYear());
                    </script>
                    ,
