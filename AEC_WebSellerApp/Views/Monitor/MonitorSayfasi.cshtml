@section AECScript {

    <script type="text/javascript">

        function addModal() {

            $('#pId').val('0');
            $('#frmMonitorAdi').val('');
            $('#frmFiyat').val('');
            $('#frmCozunurlukId').val('');
            $('#frmYenilemeHiziId').val('');
            $('#frmEkranYapisi').val('');
            $('#frmHdr').val('');
            $('#frmBoyut').val('');
            $('#frmAgirlik').val('');

        }

        $(document).ready(function () {

            $('#searchBox').on('input', function () {
                var searchTerm = $(this).val();
                $.ajax({
                    url: '/Monitor/MonitorListesi',
                    type: 'GET',
                    data: { searchTerm: searchTerm },
                    success: function (data) {
                        $('#list').html(data);
                    },
                    error: function (xhr, status, error) {
                        console.log("Error: " + error);
                    }
                });
            });
        });

        $.ajax({
            url: '/Monitor/MonitorListesi',
            type: 'GET',
            success: function (result) {
                $('#list').html(result);
            },
            error: function (xhr, status, error) {
                console.log("Error: " + error);
            }
        });

        document.addEventListener('DOMContentLoaded', function () {

            var isSuccess = '@Model.IsSuccess';
            if (isSuccess == 'True') {
                var modal = new bootstrap.Modal(document.getElementById('exLargeModal'));
                modal.show();
            }

            var modelid = '@Model.Id';
            if (modelid > 0) {
                var modal = new bootstrap.Modal(document.getElementById('exLargeModal'));
                modal.show();
            }

            var messageBox = '@TempData["MessageBox"]';
            if (messageBox == 1) {
                MessageBox("success", "Monitör Kayıt Edildi");
                resimModal();
            }
            else if (messageBox == 2) {
                MessageBox("success", "Monitör Silindi");
            }
            else if (messageBox == 4) {
                MessageBox("success", "Resim Kayıt Edildi");
            }
            else if (messageBox == 5) {
                MessageBox("success", "Resim Silindi");
            }

        });

        function resimModal(id) {
            $.ajax({
                url: '/Monitor/MonitorResimAddUpdate?pMonitorId=' + id,
                type: 'GET',
                success: function (result) {
                    $('#list2').html(result);
                    var modal = new bootstrap.Modal(document.getElementById('exLargeModalresim'));
                    modal.show();
                },
                error: function (xhr, status, error) {
                    console.log("Error: " + error);
                }
            });
        }

        $('#exLargeModal').on('hidden.bs.modal', function () {
            $('.modal-backdrop').remove();
        });

        $('#list2').on('hidden.bs.modal', function () {
            $('.modal-backdrop').remove();
        });

        function deleteModal(id) {

            const confirmDeleteLink = document.getElementById('confirmDeleteLink');
            confirmDeleteLink.href = '/Monitor/MonitorSil?pId=' + id;

        }

        function previewImage(input, previewId) {
            const file = input.files[0];
            const preview = document.getElementById(previewId);

            if (file) {
                const reader = new FileReader();
                reader.onload = function (e) {
                    preview.src = e.target.result; // Seçilen dosyanın önizleme URL'sini ayarla
                    preview.style.display = 'block'; // Resmi göster
                }
                reader.readAsDataURL(file); // Dosyayı URL formatında oku
            } else {
                preview.style.display = 'none'; // Dosya seçilmediğinde resmi gizle
            }
        }

    </script>

}